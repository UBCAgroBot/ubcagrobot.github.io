---
const {
  title = "Join our team",
  subtitle = "Applications will open next in August 2027",
} = Astro.props;
---

<section
  class="relative flex min-h-screen w-full items-center justify-center bg-cover bg-center px-6 text-white"
  style="background-image: url('/recruitment-hero.jpg');"
>
  <!-- Dark overlay for readability -->
  <div class="absolute inset-0 bg-black/50"></div>

  <div class="relative z-10 max-w-3xl text-center">
    <h1 class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl">
      {title}
    </h1>

    <p class="mt-4 text-xl sm:text-2xl md:text-3xl">
      {subtitle}
    </p>
  </div>
</section>
