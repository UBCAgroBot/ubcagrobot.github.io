---
/*
  Navigation links for the header.
  This makes it easy to add/remove pages later without editing HTML structure.
*/
const navLinks = [
  { label: "About", href: "/about" },
  { label: "Projects", href: "/projects" },
  { label: "Recruitment", href: "/recruitment" },
  { label: "Sponsor Us", href: "/sponsor" },
  { label: "Newsletter", href: "/newsletter" },
  { label: "Contact", href: "/contact" },
];

/*
  Get current page path from the browser URL.
  Used to highlight the active navigation tab.
*/
const pathname = Astro.url.pathname;
---

<!-- Header wrapper for entire navigation bar -->
<header class="header">
  <!-- Inner container to keep content centered and aligned -->
  <div class="header-inner">
    <!-- Logo + team name (left side) -->
    <a class="brand" href="/" aria-label="UBC Agrobot Home">
      <!-- Placeholder for logo image (replace later with real logo SVG/png) -->
      <img src="/agrobot_logo.png" alt="UBC Agrobot logo" class="logo" />
      <span class="brand-text">UBC Agrobot</span>
    </a>

    <!-- Main navigation menu -->
    <nav class="nav" aria-label="Primary">
      <!-- Loop through navLinks array and create buttons dynamically -->
      {
        navLinks.map((link) => (
          <a
            class={`nav-pill ${pathname === link.href ? "is-active" : ""}`}
            href={link.href}
          >
            {link.label}
          </a>
        ))
      }
    </nav>
  </div>
</header>

<style>
  /* Sticky top header */
  .header {
    position: sticky;
    top: 0;
    z-index: 50;
    background: #fff;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }

  /* Center content and control spacing */
  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 24px;
    padding: 18px 24px;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Logo + title section */
  .brand {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    color: inherit;
    white-space: nowrap;
  }

  /* Circular Agrobot logo */
  .logo {
    height: 30px; /* matches text height */
    width: auto;
    object-fit: contain;
    display: block;
  }

  /* Team name text styling */
  .brand-text {
    font-size: 18px;
    font-weight: 600;
    letter-spacing: 0.2px;
  }

  /* Navigation container */
  .nav {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
    justify-content: flex-end;
  }

  /* Navigation pill buttons */
  .nav-pill {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 10px 18px;
    border-radius: 999px;
    background: rgba(0, 0, 0, 0.1);
    text-decoration: none;
    color: rgba(0, 0, 0, 0.88);
    font-weight: 500;
    transition:
      transform 120ms ease,
      background 120ms ease;
  }

  .nav-pill:hover {
    background: rgba(0, 0, 0, 0.14);
    transform: translateY(-1px);
  }

  .nav-pill.is-active {
    background: rgba(0, 0, 0, 0.18);
  }

  /* Mobile responsiveness */
  @media (max-width: 820px) {
    .header-inner {
      flex-direction: column;
      align-items: flex-start;
    }
    .nav {
      width: 100%;
      justify-content: flex-start;
    }
  }
</style>
