---
const navLinks = [
  { label: "About", href: "/about" },
  { label: "Projects", href: "/projects" },
  { label: "Recruitment", href: "/recruitment" },
  { label: "Sponsor Us", href: "/sponsor" },
  { label: "Newsletter", href: "/newsletter" },
  { label: "Contact", href: "/contact" },
];

const pathname = Astro.url.pathname;
---

<header class="sticky top-0 z-50 border-b border-black/10 bg-white">
  <div
    class="mx-auto flex max-w-[1200px] items-center justify-between gap-6 px-6 py-4"
  >
    <!-- Logo + Team Name -->
    <a
      href="/"
      aria-label="UBC Agrobot Home"
      class="inline-flex items-center gap-3 whitespace-nowrap"
    >
      <img
        src="/agrobot_logo.png"
        alt="UBC Agrobot logo"
        class="block h-[30px] w-auto object-contain"
      />
      <span class="text-[18px] font-semibold tracking-wide"> UBC Agrobot </span>
    </a>

    <!-- Navigation -->
    <nav
      aria-label="Primary"
      class="flex flex-wrap items-center justify-end gap-3"
    >
      {
        navLinks.map((link) => (
          <a
            href={link.href}
            class={`inline-flex items-center justify-center rounded-full bg-black/10 px-5 py-2.5 font-medium text-black/90 transition-all duration-150 hover:-translate-y-0.5 hover:bg-black/15 ${pathname === link.href ? "bg-black/20" : ""} `}
          >
            {link.label}
          </a>
        ))
      }
    </nav>
  </div>
</header>
